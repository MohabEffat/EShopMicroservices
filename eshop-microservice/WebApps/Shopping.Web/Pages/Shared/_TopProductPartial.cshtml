@model Models.Catalog.ProductModel

<div class="col-12 col-md-3">
    <div class="card">
        <div class="card-header bg-success text-white text-uppercase">
            <i class="fa fa-heart"></i> Top product
        </div>
        <a asp-page="ProductDetail" asp-route-productId="@Model.Id">
            <img asp-append-version="true" class="img-fluid border-0" src="~/images/product/@Model.ImageUrl" alt="Card image cap">
        </a>
        <div class="card-body">
            <h4 class="card-title text-center">
                <a asp-page="ProductDetail" asp-route-productId="@Model.Id" title="View Product">@Model.Name</a>
            </h4>
            <div class="row">
                <div class="col">
                    <p class="btn btn-danger btn-block">@Model.Price $</p>
                </div>
                <div class="col">
                    <a asp-page="ProductDetail" asp-route-productId="@Model.Id" class="btn btn-success btn-block">View</a>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col">
                    <form asp-page="ProductList" asp-page-handler="AddToCart" method="post" class="d-grid">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary btn-block">
                            <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>