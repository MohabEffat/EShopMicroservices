@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Hero Section with Carousel -->
<div class="container-fluid px-0">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/banner/banner1.png" class="d-block w-100" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="fw-bold">Welcome to Our Shop</h2>
                    <p>Discover amazing products at great prices</p>
                    <a href="/ProductList" class="btn btn-primary">Shop Now</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/banner/banner2.png" class="d-block w-100" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="fw-bold">New Arrivals</h2>
                    <p>Check out our latest products</p>
                    <a href="/ProductList" class="btn btn-primary">Shop Now</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/banner/banner3.png" class="d-block w-100" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="fw-bold">Special Offers</h2>
                    <p>Limited time deals you don't want to miss</p>
                    <a href="/ProductList" class="btn btn-primary">Shop Now</a>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<!-- Featured Product Section -->
<div class="container py-5">
    <div class="row">
        <div class="col-md-8">
            <partial name="_TopProductPartial" model="Model.ProductList.FirstOrDefault()" />
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-gift me-2"></i> Special Offer</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <h5>Subscribe to our newsletter</h5>
                    <p>Get the latest updates, deals and exclusive offers directly to your inbox.</p>
                    <div class="input-group mb-3 mt-auto">
                        <input type="email" class="form-control" placeholder="Your email">
                        <button class="btn btn-primary" type="button">Subscribe</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Latest Products Section -->
<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-star me-2"></i> Latest Products</h5>
                </div>
                <div class="card-body">
                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                        @foreach (var product in Model.ProductList.Take(4))
                        {
                            <div class="col">
                                <partial name="_ProductItemPartial" model="product" />
                            </div>
                        }
                    </div>
                    <div class="text-center mt-4">
                        <a href="/ProductList" class="btn btn-outline-primary">View All Products</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container py-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card text-center h-100 shadow-sm border-0">
                <div class="card-body">
                    <div class="py-3">
                        <i class="fas fa-shipping-fast fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Free Shipping</h5>
                    <p class="card-text">Free shipping on all orders over $50</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center h-100 shadow-sm border-0">
                <div class="card-body">
                    <div class="py-3">
                        <i class="fas fa-undo fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Easy Returns</h5>
                    <p class="card-text">30 days money back guarantee</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center h-100 shadow-sm border-0">
                <div class="card-body">
                    <div class="py-3">
                        <i class="fas fa-headset fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">24/7 Support</h5>
                    <p class="card-text">Dedicated support team available</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-3 mb-4">
    <div class="row">
        <div class="col-sm">
            <div class="card">
                <div class="card-header bg-primary text-white text-uppercase">
                    <i class="fa fa-trophy"></i> Best products
                </div>
                <div class="card-body">
                    <div class="row">

                        @foreach (var product in Model.ProductList.TakeLast(4))
                        {
                            <div class="col-sm">
                                <partial name="_ProductItemPartial" model="@product" />
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
